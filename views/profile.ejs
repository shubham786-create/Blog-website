<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= user.fullname || user.username %> | Profile</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body class="bg-gray-50 text-gray-900">

  <!-- Navbar -->
  <nav class="bg-white shadow-md flex  w-full justify-between p-4">
    
      <div class="flex items-center ">
      <img class="w-20 h-20 rounded-full" src="data:image/jpeg;base64," />
      <h1 class="text-2xl font-bold text-blue-600">MyBlog</h1>
      </div>
      <ul class="flex  items-center ml-5 space-x-6 text-gray-950">
        <li><a href="/home" class="hover:text-blue-600">Home</a></li>
        <li><a href="/about" class="hover:text-blue-600">About</a></li>
        <li><a href="/contact" class="hover:text-blue-600">Contact</a></li>
        <li class="w-32 text-center rounded-2xl overflow-hidden p-2 bg-blue-800"><a class="w-full text-white" href="/logout">Log out</a></li>    

      </ul>
    
  </nav>

  <!-- Profile Section -->
  <main class="max-w-full mt-10 px-6  flex gap-10 min-h-fit " id="main">

    <!-- User Info -->
    <div class="bg-blue-100 shadow rounded-xl p-6 justify-center flex flex-col items-center gap-6 w-[40%]">
      <div class="w-56 h-56 rounded-full bg-white border-2 border-blue-700 flex justify-center items-center text-6xl font-bold text-gray-500">
        <%= (user.fullname || user.username).charAt(0).toUpperCase() %>
      </div>
      <div class="flex flex-col items-center">
        <h1 class="text-2xl font-semibold"><%= user.fullname || user.username %></h1>
        <p class="text-gray-500">@<%= user.username %></p>
        <p class="text-gray-600"><%= user.email %></p>
        <p class="font-semibold">followers . following</p>
      </div>
      <div class="flex justify-center gap-2">
        <button class="bg-blue-700 p-2 rounded-2xl text-white cursor-pointer">Share</button>
        <button class="bg-blue-700 p-2 rounded-2xl text-white cursor-pointer">Edit profile</button>
      </div>
      <p class="text-gray-600 font-semibold">Member Since </p>
      
    </div>

    <!-- User Posts -->
    <section class=" w-[55%]   ">
      <h2 class="text-2xl font-bold bg-blue-100 rounded-xl shadow-2xl shadow-gray-200 text-black w-full  p-4 uppercase">Your Posts</h2>
      <div class="mt-4 flex flex-wrap gap-2">
     <% if (user.posts.length > 0) { %>
  <% user.posts.forEach(function(element) { %>
    <div class=" w-[32%] min-h-84 shadow-2xl shadow-gray-200 bg-blue-100 rounded-xl flex flex-col  ">
      <img class="rounded-2xl w-full h-50 object-cover" src="<%= element.image %>" />
      <h1 class="text-xl font-semibold p-2 mt-5"><%= element.title %></h1>
      <p class="text-gray-700 p-2 overflow-y-auto"><%= element.content %></p>
    </div>
  <% }); %>
<% } %>

        <div class=" w-[32%] h-84 shadow-2xl shadow-gray-200 bg-blue-100 rounded-xl flex flex-col items-center justify-center ">
           <button id="imageSelector" class="cursor-pointer"><img src="https://cdn-icons-png.flaticon.com/128/1828/1828919.png" class="w-16 h-16"/></button>
           <p>Upload a new blog</p>
            <input type="file" name="file" hidden id="previewInput" accept="image/*"/>
        </div>
      </div>
    </section>
  </main>

   <section class=" w-[80%] mx-auto bg-blue-100 m-10 rounded-2xl shadow-2xl shadow-gray-400" id="popup" style="display: none;">
    <form action="/upload" method="post" enctype="multipart/form-data" class="flex flex-col  gap-3 w-full mx-auto">
      <img class="w-[60%] mx-auto rounded-2xl" src="" id="preview" style="display: none;"/>
      <input type="file" name="multerImage" id="realInput" hidden required/>
      <input type="text" name="title" id="title" placeholder="Caption" class="w-[60%] mx-auto p-4 my-2 outline-none" required/>
      <textarea name="content" id="content" class="w-[60%] mx-auto p-4 resize-none h-auto outline-none" required placeholder="Description"></textarea>
      <div class="flex justify-center items-center gap-4">
      <button type="submit" id="uploadBtn" class="bg-blue-700 p-2 text-white text-xl rounded-2xl m-2 font-semibold w-20 cursor-pointer ">upload</button>
      <button id="cancel" class="bg-blue-700 p-2 text-white text-xl rounded-2xl m-2 font-semibold w-20 cursor-pointer">Cancel</button>
      </div>
    </form>
   </section>
  <footer class="text-center text-gray-500 py-10 mt-10">
    Â© <%= new Date().getFullYear() %> MyBlog. All rights reserved.
  </footer>

 
<script>
  document.querySelector("#imageSelector").addEventListener("click",(e)=>{
    document.querySelector("#previewInput").click();
  });

   document.querySelector("#previewInput").addEventListener("change",(e)=>{
           const file=e.target.files[0];
           if(file){
            const reader=new FileReader();
            reader.onload=function(ev){
             document.querySelector("#preview").src=ev.target.result;
              document.querySelector("#preview").style.display="block"
              document.querySelector("#main").classList.add('hidden');
              document.querySelector('#popup').style.display="block";
            }
            reader.readAsDataURL(file);
            const dataTransfer=new DataTransfer();
            dataTransfer.items.add(file);
            document.querySelector("#realInput").files=dataTransfer.files;
           }
   })
 
</script>
</body>
</html>
